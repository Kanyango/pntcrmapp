<% include ../../partials/header %>
<div class="page-header">
	<div class="page-title">
    Inquiry
	</div>
	<div class="page-actions">
    <select class="form-control" name="inquiry-status" id="inquiry-status">
      <option value="Open" <% if(query.status=='Open'){ %> selected <% } %>>Open</option>
      <option value="Pending" <% if(query.status=='Pending'){ %> selected <% } %>>Pending</option>
      <option value="Cancelled" <% if(query.status=='Cancelled'){ %> selected/<% } %>>Cancelled</option>
      <option value="Closed" <% if(query.status=='Closed'){ %> selected <% } %>>Closed</option>
    </select>
		<a href="/inquiry/edit/<%= query.id %>" class="btn btn-primary">Edit </a>
	</div>
</div>
<div class="page-content">
  <div class="row">
    <div class="col-md-4 col-sm-6 col-xs-12">
      <% for (var c of client){
        if(c.id == query.client){
        %>
      <div class="md-form">
        <label for="first_name">First Name</label>
        <input type="text" id="first_name" name="first_name" value="<%= c.first_name %>" class="form-control" disabled>
      </div>
      <div class="md-form">
        <label for="last_name">Last Name</label>
        <input type="text" id="last_name" name="last_name" value="<%= c.last_name %>" class="form-control" disabled>
      </div>
      <div class="md-form">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" value="<%= c.email %>" class="form-control" disabled>
      </div>
      <div class="md-form">
        <label for="phone">Phone</label>
        <input type="text" id="phone" name="phone" value="<%= c.phone %>" class="form-control" disabled>
      </div>
      <% } } %>
    </div>
    <div class="col-md-8 col-sm-6 col-xs-12">
      <h4>query</h4>
    <p><%= query.query %></p>
<hr>
		<% for(var ri of rInquiry){
				if(query.id == ri.inquiry){ %>
					<h4>Reminder</h4>
					<%
						for(var r of reminder){
							if(r.id == ri.reminder){ %>
								<%= r.date %>
						<% }
						}
					%>
				<% }
			 } %>

    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="sale-Modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"></h4>
      </div>
      <div id="imeiBody" class="modal-body">

      </div>
    </div>
  </div>
</div>
<input type="hidden" name="id" value="<%= query.id %>">
<% include ../../partials/footer %>
