<% include ../../../partials/header %>
<div class="page-header">
	<div class="page-title">
		Vendor Payments
	</div>
	<div class="page-actions">

	</div>
</div>
<div class="page-content">
	<div class="row">
		<div class="col-md-12">
			<table class="table table-striped table-hover table-sm data-tables">
				<thead>
					<th>Vendor</th>
					<th>Product</th>
					<th>Cost</th>
					<th>Quantity</th>
					<th>Date</th>
					<th>Amount</th>
					<th>Paid</th>
					<th>Action</th>
				</thead>
				<tbody>
					<%
						for(var s of sale){
							for(var sP of saleP){
								if(s.id == sP.sale){ %>
							<tr>
								<td>
									<%
										for(var cp of cproducts){
											if(cp.id == sP.product){
												for(var v of vendor){
													if(v.id == cp.vendor){%>
												<%= v.name %>
										<% 		}
												}
											}
										}
									%>
								</td>
								<td>
									<%
										for(var cp of cproducts){
											if(cp.id == sP.product){
												for(var p of products){
													if(cp.product == p.id){ %>
												<%= p.title %>
										<% 		}
												}
											}
										}
									%>
								</td>
								<td><%= sP.cost %></td>
								<td>
									<% var qty=0; for(var i of imei){
		                if(i.sale == sP.id){
		                qty=qty+1;
		              } } %>
		              <%= qty %>
								</td>
								<td><%= s.updated_at %></td>
								<td><%= qty*sP.cost %></td>
								<td></td>
								<td></td>
							</tr>
					<% 		}
							}
						}
					%>
				</tbody>
			</table>

		</div>
	</div>
</div>
<!-- Modal -->
<div class="modal fade" id="vendor-Modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"></h4>
      </div>
      <div id="ModalBody" class="modal-body">

      </div>
    </div>
  </div>
</div>
<% include ../../../partials/footer %>
