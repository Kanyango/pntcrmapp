<div class="row padding-20">
  <h4 class="col-sm-12">Edit Repair Product</h4>
  <form class="" action="/repair/edit/<%= repair.id %>" method="post">
    <div  class="row">
    <input type="hidden" name="_method" value="put">
        <div class="col-sm-6">
          <label for="first_name">First Name</label>
    			<input type="text" id="first_name" class="form-control" name="first_name" value="<%= repair.first_name %>" placeholder="First Name">
    		</div>
        <div class="col-sm-6">
          <label for="last_name">Last Name</label>
    			<input type="text" id="last_name" class="form-control" name="last_name" value="<%= repair.last_name %>" placeholder="Last Name">
    		</div>
        <div class="col-sm-6">
          <label for="phone">Phone</label>
    			<input type="text" id="phone" class="form-control" name="phone" value="<%= repair.phone %>" placeholder="Phone Number">
    		</div>
        <div class="col-sm-6">
          <label for="email">Email</label>
    			<input type="email" id="email" class="form-control" name="email" value="<%= repair.email %>" placeholder="Email">
    		</div>
        <div class="col-sm-6">
          <label for="status">Status</label>
          <select class="form-control" name="status">
            <option value="open" <% if(repair.status == 'open'){ %> selected <% } %>>Open</option>
            <option value="closed" <% if(repair.status == 'closed'){ %> selected <% } %>>Closed</option>
          </select>
    		</div>
      <div class="clearfix"></div>
      <div class="form-group col-sm-12 padding-15">
        <button type="submit" class="add_imei btn btn-primary">Submit</button>
      </div>
    </div>
  </form>
</div>
