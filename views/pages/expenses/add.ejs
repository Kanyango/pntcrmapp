<% include ../../partials/header %>
<div class="page-header">
	<div class="page-title">
		Add Expense
	</div>
	<div class="page-actions">

	</div>
</div>
<div class="page-content">
  <form action="/expenses/add" method="post" role="form" autocomplete="off">
    <div class="row">
    <div class="col-6 form-group">
      <label class="col-md-12 col-sm-12 col-xs-12" for="first_name">First Name </label>
      <div class="col-md-12 col-sm-12 col-xs-12">
        <select class="form-control" name="category" required>
          <option value="">Choose Category</option>
          <% for(var e of expense){ %>
            <option value="<%= e.id %>"><%= e.title %></option>
          <% } %>
        </select>
      </div>
    </div>
    <div class="col-6 form-group ">
      <label class="col-md-12 col-sm-12 col-xs-12" for="amount">Amount</label>
      <div class="col-md-12 col-sm-12 col-xs-12">
        <input class="form-control" name="amount" id="amount" placeholder="Expense Amount">
      </div>
    </div>
    </div>
    <hr/>
    <div class="col-12">
      <div class="form-group">
        <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
          <button type="submit" class="btn btn-success">Submit</button>
        </div>
      </div>
    </div>
  </div>
  </form>
</div>
<% include ../../partials/footer %>
