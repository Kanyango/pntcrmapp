<% include ../../partials/header %>
<div class="page-header">
	<div class="page-title">
    Edit Attribute Set
	</div>
	<div class="page-actions">

	</div>
</div>
<div class="page-content">
  <form action="/settings/add-attribute-set/<%= attrib.id %>" method="post" class="row">
    <div class="col-4">
      <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">Attribute:</label>
        <div class="col-md-9 col-sm-9 col-xs-12">
          <label><%= attrib.title %></label>
        </div>
      </div>
    </div>
    <div class="col-8">
      <table class="table table-striped table-bordered table-sm">
        <thead>
          <tr>
            <th>Entity</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(var a of attEnt){ %>
          <tr>
            <td>
              <% for(var e of entities){
                if(a.entities==e.id){ %>
                <%= e.title %>
              <% } } %>
            </td>
            <td><a href="/settings/remove-att-set/<%= a.id %>">Remove</a></td>
          </tr>
          <%  } %>
        </tbody>
      </table>
    </div>
    <div class="col-4">
      <h4>Assigned Entities</h4>
      <hr/>
      <div id="assigned" class="form-group">

    </div>
    </div>
    <div class="col-4">
      <h4>Unassigned Entities</h4>
      <hr/>
      <div id="unassigned" class="form-group">
      <% for (var e of entities){ %>
        <div class="checkbox">
          <label>
            <input type="checkbox" class="flat" name="entity[]" value="<%= e.id %>" onclick="addval(this)" id="<%= e.title %>"> <%= e.identifier %>
          </label>
        </div>
      <% } %>
    </div>
    </div>
    <div class="col-12">
      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </form>
</div>
<% include ../../partials/footer %>
