<% include ../../partials/header %>
<div class="row">
  <div class="col-md-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>New Attribute Set<small></small></h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <%for (att of attEnt){%> <%= att.attributes %> <%} %>
        <table class="table table-striped table-bordered datatable-fixed-header">
      		<thead>
      			<tr>
              <th scope="col">Title</th>
              <th scope="col" class="actions">Actions</th>
      			</tr>
      		</thead>
      		<tbody>
            <% for(attrib of attribute){ %>
              <tr>
                <td><%= attrib.title %></td>
                <td><a class="btn btn-success" href="/settings/add-attribute-set/<%= attrib.id %>">Add</a><a class="btn btn-primary" href="/settings/edit-attribute-set/<%= attrib.id %>">Edit</a></td>
              </tr>
            <% } %>
      		</tbody>
      	</table>
        <form action="/settings/attribute-set" method="post">
        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12">Attributes</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <select class="form-control" name="attributes_id">
                  <option value="">Select Attribute</option>
                  <% for(var i=0; i < attrib.length; i++){ %>
                    <option value="<%= attrib[i].id %>"><%= attrib[i].title %></option>
                  <% } %>
                </select>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <h4>Assigned Entities</h4>
            <hr/>
            <div id="assigned" class="form-group">

          </div>
          </div>
          <div class="col-md-4">
            <h4>Unassigned Entities</h4>
            <hr/>
            <div id="unassigned" class="form-group">
            <% for (var i = 0; i < entities.length; i++){ %>
              <div class="checkbox">
                <label>
                  <input type="checkbox" class="flat" name="entity[]" value="<%= entities[i].id %>" onclick="addval(this)" id="<%= entities[i].title %>"> <%= entities[i].title %>
                </label>
              </div>
            <% } %>
          </div>
          </div>
        </div>

          <div class="row">
            <div class="form-actions">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<% include ../../partials/footer %>
