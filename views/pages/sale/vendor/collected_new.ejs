<% include ../../../partials/header %>
<div class="page-header">
	<div class="page-title">
		New Vendor Collected Products
	</div>
	<div class="page-actions">

	</div>
</div>
<div class="page-content">
  <form action="/sale/collected_new" method="post">
    <div class="row">
      <div class="col-md-6">
        <div class="col-md-12 col-sm-12 col-xs-12 form-group">
          <label for="col_vendor" class="col-md-12 col-sm-12 col-xs-12">Vendor</label>
					<div class="col-md-12 col-sm-12 col-xs-12">
	          <select class="custom-select" name="col_vendor" id="col_vendor">
	            <option value="">Choose Vendor</option>
	            <% for(var ven of vendor){ %>
	              <option value="<%= ven.id %>"><%= ven.name %></option>
	            <% } %>
	          </select>
					</div>
        </div>
				<div class="col-md-12 col-sm-12 col-xs-12 form-group">
          <label for="col_user" class="col-md-12 col-sm-12 col-xs-12">User</label>
					<div class="col-md-12 col-sm-12 col-xs-12">
	          <select class="custom-select" name="col_user" id="col_user">
	            <option value="">Choose User</option>
	            <% for(var u of user){ %>
	              <option value="<%= u.id %>"><%= u.first_name %> <%= u.middle_name %> <%= u.last_name %></option>
	            <% } %>
	          </select>
					</div>
        </div>
        <!-- <div class="col-md-12 col-sm-12 col-xs-12 form-group">
          <label for="cost" class="col-md-12 col-sm-12 col-xs-12">Cost</label>
          <div class="col-md-12 col-sm-12 col-xs-12">
            <input class="form-control" name="cost" id="cost" required>
          </div>
        </div> -->
      </div>
      <div class="col-md-6">
        <h6>Products Picked From Vendor</h6>
				<table class="table table-striped table-hover table-sm">
					<thead class="thead-dark">
						<tr>
              <th>Product</th>
              <th>Cost</th>
							<th>Imei</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody id="addCollected">

					</tbody>
				</table>
        <div class="row"></div>
      </div>
    </div>
    <div class="col-md-12 pull-right">
      <button type="submit" class="btn btn-success">SUBMIT</button>
    </div>
  </form>
	<hr>
  <small>Tick Products To add</small>
  <div id="vendor_table" class="">
    <table class="table table-striped table-hover table-sm data-tables">
  		<thead class="thead-dark">
        <tr>
          <th></th>
          <th>Product</th>
          <th>Brand</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% for(var product of products){ %>
        <tr id="tr_<%= product.id %>">
          <td>
            <div class="checkbox">
            <label>
              <input type="checkbox" name="<%= product.title %>" value="<%= product.id %>" id="ch_<%= product.id %>" onclick="addcoll(this)">
            </label>
          </div></td>
          <td><%= product.title %></td>
          <td><%= product.brand.title %></td>
          <td><%= product.price %></td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
<% include ../../../partials/footer %>
